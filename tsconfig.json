{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictFunctionTypes": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}